@model TrashCollectorProject.Models.Customer

@{
    ViewBag.Title = "ChooseNewOneTimePickup";
}

<h2>ChooseNewOneTimePickup</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    <h4>Customer</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })


    <div class="form-group">
            @Html.LabelFor(model => model.OneTimePickupDate, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.OneTimePickupDate, new { htmlAttributes = new { @class = "form-control", type = "date"} })
                @Html.ValidationMessageFor(model => model.OneTimePickupDate, "", new { @class = "text-danger" })
            </div>
        </div>


    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Choose Pickup Date" class="btn btn-default" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
